{
  "scopeName": "source.lscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#variables" },
    { "include": "#types" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lscript",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.lscript"
            }
          ]
        },
        {
          "name": "string.quoted.single.lscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.lscript"
            }
          ]
        },
        {
          "name": "string.interpolated.lscript",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "variable.interpolation.lscript",
              "match": "\\{[A-Za-z_][A-Za-z0-9_]*\\}"
            }
          ]
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.lscript",
          "match": "\\b(int|dec|string|bool)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.lscript",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lscript",
          "match": "\\b(import|return|break|while|loop|until|del|if|else|elif|match|case|execute|class|typeof|ref)\\b"
        },
        {
          "name": "constant.language.lscript",
          "match": "\\b(true|false|null|this)\\b"
        },
        {
          "name": "keyword.control.lscript",
          "match": "\\b(?<=import\\s+)force\\b"
        },
        {
          "name": "keyword.loop.until.lscript",
          "match": "\\b(?<=loop[^{]*?)until\\b"
        },
        {
          "name": "keyword.logical.lscript",
          "match": "\\b(and|or)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.lscript",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "storage.type.class.lscript",
          "match": "\\bclass\\b"
        },
        {
          "name": "entity.name.type.class.lscript",
          "match": "\\bclass\\s+([A-Za-z_][A-Za-z0-9_]*)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.lscript",
          "match": "\\b(?!int\\b|dec\\b|string\\b|bool\\b)[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    }
  }
}